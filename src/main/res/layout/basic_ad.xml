<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:background="@drawable/pressed_ad"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <FrameLayout
            android:id="@+id/thumbnail"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

    <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/adveriser_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_toLeftOf="@+id/advertiser"
                    android:layout_alignBottom="@id/advertiser"
                    android:text="Sponsored by "
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/advertiser"
                    tools:text="Advertiser"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
        <TextView
                android:id="@+id/title"
                tools:text="Title"
                android:textColor="#4A4A4A"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/adveriser_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/description"
                tools:text="Description"
                android:layout_below="@id/title"
                android:textColor="#898989"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <ImageView
                android:id="@+id/optout_icon"
                android:src="@drawable/optout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/description"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="3dp"
                />

    </RelativeLayout>

</LinearLayout>